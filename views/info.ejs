    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <title>CRUD MongoDB</title>

</head>

<body>
    <div>
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/mascotas">Mascotas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/veterinarios">Veterinarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/">Cerrar Sesion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="container">
        <div class="shadow-lg p-3 mb-5 bg-body rounded" style="margin-top: 22rem;">
            <!-- Tabla Mascotass  -->
            <table id="tablaMascotas" class="table ">
                <thead>
                    <tr>
                        <th style="display: none;">ID</th>
                        <th>Nombre</th>
                        <th>Edad</th>
                        <th>Especie</th>
                        <th>Raza</th>
                        <th>Diagnostico</th>
                        <th>Dueño</th>
                        <th>Apellido Dueño</th>
                        <th>Movil</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td style="display: none;">
                            <%= mascotas._id %>
                        </td>
                        <td>
                            <%= mascotas.nombre %>
                        </td>
                        <td>
                            <%= mascotas.edad %>
                        </td>
                        <td>
                            <%= mascotas.especie %>
                        </td>
                        <td>
                            <%= mascotas.raza %>
                        </td>
                        <td>
                            <%= mascotas.diagnostico %>
                        </td>
                        <td>
                            <%= mascotas.duenioNombre%>
                        </td>
                        <td>
                            <%= mascotas.duenioApellido%>
                        </td>
                        <td>
                            <%= mascotas.duenioTelefono%>
                        </td>
                        <td>
                            <%= mascotas.duenioEmail%>
                        </td>

                    </tr>

                </tbody>
            </table>
            <a type="button" class="w-50 btn btn-guardar btn-lg" href="/mascotas">Volver</a>
            <a  href="/edit/<%= mascotas._id %>" type="button" class="btn btn-outline-primary bi bi-pencil" style="float:right ;"></a>
        </div>
    </div>
   
