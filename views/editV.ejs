    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>CRUD MongoDB</title>
</head>

<body>
    <div>
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/mascotas">Mascotas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/veterinarios">Veterinarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/">Cerrar Sesion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="container">

        <div class="shadow-lg p-3 mb-5 mt-4 bg-body rounded">
            <h4>Actualizar informacion de Veterinarios</h4>
            <form action="/editarVeterinario/<%= veterinarios.id %>" method="POST">
                <input name="id" id="id" type="text" value="<%= veterinarios.id %>" hidden>
                <div class="col-md-6">
                    <label for="rut" class="form-label">Rut</label>
                    <input id="rut" name="rut" type="text" class="form-control" value="<%= veterinarios.rut %>"
                        required>
                </div>
                <div class="col-md-6">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input id="nombre" name="nombre" type="text" class="form-control" value="<%= veterinarios.nombre %>"
                        required>
                </div>
                <div class="col-md-6">
                    <label for="apellido" class="form-label">Apellido</label>
                    <input id="apellido" name="apellido" type="text" class="form-control"
                        value="<%= veterinarios.apellido %>" required>
                </div>
                <div class="col-md-6">
                    <label for="edad" class="form-label">Edad</label>
                    <input id="edad" name="edad" type="number" class="form-control" value="<%= veterinarios.edad %>"
                        required>
                </div>
                <div class="col-md-6">
                    <label for="especialidad" class="form-label">Especialidad</label>
                    <input id="especialidad" name="especialidad" type="text" class="form-control"
                        value="<%= veterinarios.especialidad %>" required>
                </div>
                <div class="col-md-6">
                    <label for="telefono" class="form-label">Telefono</label>
                    <input id="telefono" name="telefono" type="number" class="form-control"
                        value="<%= veterinarios.telefono %>" required>
                </div>
                <div class="col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <input id="email" name="email" type="text" class="form-control" value="<%= veterinarios.email %>"
                        required>
                </div>

        </div>


        <button type="submit" class="w-100 btn btn-guardar btn-lg"><i class="bi bi-save"></i>Actualizar Informacion</button>
        <a type="button" href="/veterinarios" class="w-100 btn btn-guardar btn-lg mt-2">Volver </a>
        </form>


    </div>
</body>
