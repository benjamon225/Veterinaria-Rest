        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>CRUD MongoDB</title>

</head>

<body>
    <div>
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/mascotas">Mascotas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/veterinarios">Veterinarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/">Cerrar Sesion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="container">
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="shadow-lg p-3 mb-4 mt-4 bg-body rounded">
                    <h4>Registro de mascota</h4>

                    <form action="/editar" method="POST">
                        <input name="id" id="id" type="text" value="<%= mascotas.id %>" hidden>
                        <div class="col-md-6">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input id="nombre" name="nombre" type="text" class="form-control"
                                value="<%= mascotas.nombre %>">
                        </div>
                        <div class="col-md-6">
                            <label for="edad" class="form-label">Edad</label>
                            <input id="edad" name="edad" type="number" class="form-control" value="<%= mascotas.edad %>"
                                required>
                        </div>
                        <div class="col-md-6">
                            <label for="especie" class="form-label">Especie</label>
                            <input id="especie" name="especie" type="text" class="form-control"
                                value="<%= mascotas.especie %>" required>
                        </div>
                        <div class="col-md-6">
                            <label for="raza" class="form-label">Raza</label>
                            <input id="raza" name="raza" type="text" class="form-control" value="<%= mascotas.raza %>"
                                required>
                        </div>
                        <div class="col-md-6">
                            <label for="diagnostico" class="form-label">Diagnostico</label>
                            <textarea name="diagnostico" id="diagnostico" cols="26" rows="5" required><%= mascotas.diagnostico %></textarea>
                        </div>
                </div>
            </div>


            <div class="col-md-6">
                <div class="shadow-lg p-3 mb-4 mt-4 bg-body rounded">
                    <h4 class="mb-3 mt-4">Informacion del duenio</h4>
                    <div class="col-md-6">
                        <label for="nombre_d" class="form-label">Nombre</label>
                        <input id="nombre_d" name="nombre_d" type="text" class="form-control"
                            value="<%= mascotas.duenioNombre%>">
                    </div>
                    <div class="col-md-6">
                        <label for="apellido_d" class="form-label">Apellido</label>
                        <input id="apellido_d" name="apellido_d" type="text" class="form-control"
                            value="<%= mascotas.duenioApellido%>" required>
                    </div>
                    <div class="col-md-6">
                        <label for="telefono_d" class="form-label">Telefono</label>
                        <input id="telefono_d" name="telefono_d" type="text" class="form-control"
                            value="<%= mascotas.duenioTelefono%>" required>
                    </div>
                    <div class="col-md-6">
                        <label for="email_d" class="form-label">Email</label>
                        <input id="email_d" name="email_d" type="text" class="form-control"
                            value="<%= mascotas.duenioEmail%>" required>
                    </div>
                </div>
            </div>


        </div>

        <button type="submit" class="w-100 btn btn-guardar btn-lg"><i class="bi bi-save"></i>Editar info</button>
        <a type="button" href="/mascotas" class="w-100 btn btn-guardar btn-lg mt-2">Volver </a>
        </form>
    </div>

    </div>
